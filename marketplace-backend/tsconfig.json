{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "lib": ["es6"],
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "removeComments": true,
    "incremental": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "assets": ["./src/abi"]
}
